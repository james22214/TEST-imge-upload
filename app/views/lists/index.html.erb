<p id="notice"><%= notice %></p>
  <div id="list">
    <div class="jumbotron">
      <h1>Listing Lists</h1>
      <div class="table-responsize">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @lists.each do |list| %>
              <tr>
                <td><%= image_tag list.image.url.to_s %></td>
                <td class="warning"><%= list.name %></td>
                <td><%= list.description %></td>
                <td><%= list.price %></td>
                <td><%= link_to 'Show', list, class: "btn btn-link" %></td>
                <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-link" %></td>
                <td><%= link_to 'Destroy', list, class: "btn btn-link" , method: :delete, data: { confirm: '你確定要刪除嗎？' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


      <br>

      <%= link_to 'New List', new_list_path, class: "btn btn-info" %>
    </div>
 </div>